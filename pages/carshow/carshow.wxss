/* pages/carshow/carshow.wxss */



.carshowbanner{
  position: relative;
}
.carshowbanner .img image{
  width: 100%;
  height: 20em;
}

.carshowbanner .img .img2{
  width: 90%;
  height: 10em;
  position: absolute;
  bottom: -5em;
  z-index: 5;
  left: 50%;
  transform: translate(-50%,0);
}

.introduce{
  margin-top: 7.2em;
}
.introduce .h1{
  font-size:1.5em;
  font-weight: bold;
  text-align: center;
}
.introduce .introduceText{
  font-size: 0.8em;
  color: #6a706e;
  text-align: center;
  width: 90%;
  margin: 1.75em auto;
  line-height: 1.75;
}
.introduce .priceBtn{
  width:40%;
  margin: 0 auto;
  text-align: center;
  background-color: #efac37;
  color: #fff;
  border-radius: 10em;
  padding: 0.5em 0;
}


.carshowCard{
  display: flex;
  margin: 2em 0;
}
.carshowCard .item{
  flex: 1;
  text-align: center;
  margin:1%;
}
.carshowCard .item .img{
  border: 1px solid #eee;
}
.carshowCard .item .img image{
  width: 5em;
  height: 5em;
}
.carshowCard .item text{
  display: block;
  margin: 0.75em 0;
}
.carparameter{
  padding: 0.75em;
}
.title{
  padding: 0.75em;
}

.carparameterCon .ul .li{
  font-size: 0.85em;
  color: #646464;
  display: inline-block;
  width: 49%;
  padding: 0.85em 0;
  border-top: 1px solid #eee;
}
.carshowpic{
  width: 100%;
  overflow-x: scroll;
  margin: 1.5em 0;
}
.carshowpic .carshowpicScroll{
  width: 293%;
}
.carshowpic .pic{
  display: inline-block;
  margin-right: 0.75em;
}
.carshowpic .pic image{
  height: 13em;
  display: block;
}
.carshowpic .pic:last-child{
  margin-right: 0;
}

.carreport .p{
  font-size: 0.85em;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
  line-height: 2;
  padding: 0 1em;
  color: #6e7275;
  margin: 0.5em 0;
}
.carreport .p text.b{
  color: #000;
  font-weight: bold;
}

.carshowimg .title{
  padding: 1em 1.75em;
}
.carshowimgCon{
  padding: 0.25em 0.5em;
}
.carshowimgCon image{
  width: 100%;
  height: 20em;
}


/* 客服和收藏 */
.service{
  position: fixed;
  bottom: 3em;
  right: 0.2em;
  background: rgb(177, 177, 177);
  border-radius: 10em;
  padding: 0.5em 0; 
}
.service image{
  width: 1.5em;
  height: 1.5em;
}
.service .item{
  padding: 0.5em 0.5em;
}
.service .item:active{
  background: #000;
}
.service text{
  display: block;
  font-size: 0.75em;
  color: #fff;
}
.kefu button{
  background: none;
  width:1.5em !important ;
  padding: 0 !important;
}
.carshowimgCon .p{
    font-size: 0.85em;
    padding: 0.5em;
    line-height: 1.75;
    background: #eee;
    margin: 0.5em 0;
}


/* 金融方案  样式开始 */
.finance{
  text-align: center;
  padding: 1em;
  margin: 0.75em;
  border: 1px solid #eee;
}
.finance_p{
  font-size: 0.8em;
  background: #f3f3f3;
  color: #939393;
  padding: 0.75em;
  margin: 0.5em 0;
}
.finance_con{
  display: flex;
  background: #f3f3f3;
  padding: 0.75em;
  font-size: 0.95em;
}
.finance_c_item{
  flex: 1;
  color: #606060;
  border-right: 1px solid #e6e6e6;
}
.finance_c_item:last-child{
  border-right: 0;
}
.finance_price{
  color: #efac37;
  font-size: 1.2em;
  font-weight: bold;
  margin-top: 0.5em;
}

/* 金融方案 样式结束 */