.zan-dialog__mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 10;
  background: rgba(0, 0, 0, 0.4);
  display: none;
}

.zan-dialog__container {
    position: fixed;
    width: 100%;
    min-height: 20vh;
    background: #fff;
    transform: translateY(300%);
    z-index: 12;
    border-radius: 20rpx 20rpx 0 0;
    bottom: 118rpx;
    transition:0.4s;
}

.zan-dialog--show .zan-dialog__container {
  transform: translateY(0);
  transition:0.4s;
}

.zan-dialog--show .zan-dialog__mask {
  display: block;
}
