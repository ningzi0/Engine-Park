/* pages/my/my.wxss */
.myTop{
  position: relative;
}
.myTopbg image{
  width: 100%;
  height: 35em;
  display: block;
}
.myTopbg .blackmask{
  background-color: rgba(0,0,0,0.7);
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  position: absolute;
}

.myTopCon{
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%,-40%);
  width: 100%;
}

.headpic{
  text-align: center;
}
.headpic navigator{
  width:6em;
  height: 6em;
  border-radius: 50%;
  margin: 0 auto;
}
.headpic image{
  width: 6em;
  height: 6em;
  border-radius: 50%;
}
.headText{
  color: #fff;
  font-size: 1em;
  font-weight: bold;
  margin: 0.5em 0;
}
.myTopUl{
  display: flex;
  margin: 5em 1.5em 0;
}
.myTopUl .li{
  flex: 1;
  text-align: center;
}
.myTopUl .li image{
  width: 2em;
  height: 2em;
}
.myTopUl .li text{
  font-size: 0.9em;
  color: #fff;
  margin: 0.5em 0;
  display: block;
}
.myTopUl .li .num{
  color: #fff;
  font-size: 1.2em;
  font-weight: bold;
  font-family: Arial, Helvetica, sans-serif;
}


.mylistTit{
  font-size: 1.3em;
  font-weight: bold;
}

.mylist{
  margin: 0 1em;
}
.mylistTit{
  margin-top: 1.5em;
}
.mycar .mylistLi{
  padding: 0.75em 0;
}
.mylistLi{
  border-bottom: 1px solid #f2f2f2;
}
.mylistLi navigator{
  padding: 0.75em 0;
  border-radius: 0.35em;
}
.mylistLi image{
  width: 1.5em;
  height: 1.5em;
  vertical-align: middle;
  margin: 0 0.75em 0 0;
}
.mylistLi text{
  display: inline-block;
  vertical-align: middle;
  font-size: 0.9em;
  color: #b7babe;
}
.mylistTit .addcars{
  font-size: 0.65em;
  color: #fff;
  display: inline-block;
  vertical-align: middle;
  background-color: #efac37;
  padding: 0.35em 0.9em;
  margin: 0 0.5em;
  font-weight: 500;
}
.mycarlife .mylistLi text{
  font-size: 1em;
}
.mygarageCon{
  margin: 1em 0 0;
}

.mygarcarinfo{
  width: 50%;
  text-align: center;
  padding: 2em 1em;
  box-sizing: border-box;
  background-color: #fafafa;
  height: 12em;
}
.mygarcarinfo .time{
  font-size: 0.9em;
  letter-spacing: 0.25em;
  color: #a6a7ab;
}
.mygarcarinfo .text{
  font-size: 1.2em;
  font-weight: bold;
  color: #404447;
  margin: 0.5em 0 0.85em;
  letter-spacing: -0.1em;
}
.mygarcarinfo .price{
  font-size: 1.2em;
  color: #adaeb3;
  font-weight: bold;
  opacity: 0.5;
  
}
.mygarLi image{
  width: 50%;
  height: 12em;
}

.mygarage .mylistTit{
  margin:  1em;
}











