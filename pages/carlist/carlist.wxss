/* pages/list/list.wxss */
.search{
  padding: 0.5em 1em;
  position: relative;
}
.search input{
  background-color: #76919c20;
  padding: 0.75em 0.75em 0.75em 3.5em;
  font-size: 0.8em;
  border-radius: 5em;
}

.search image{
  width: 1em;
  height: 1em;
  position: absolute;
  top: 50%;
  left: 10%;
  transform: translate(0,-50%);
}


.screen .ul{
  display: flex;
  font-size: 0.75em;
  padding: 1em;
}
.screen .ul .li{
  flex: 1;
  text-align: center;
}
.screen .ul .li picker{
  display: inline-block;
  vertical-align: middle;
}
.screen .ul .li image{
  width: 0.8em;
  height: 0.8em;
  display: inline-block;
  vertical-align: middle;
  margin: 0 0.2em;
}

.listCon{
  margin-top:6.5em ;
}
.listCon .ul .li{
  width: 49%;
  display: inline-block;
  margin: 0.5%;
  box-shadow: 0 0 1em rgba(0,0,0,0.1);
  overflow: hidden;
  border-radius:0.2em;
  position: relative;
}
.listCon .ul .li image{
  width: 100%;
  height: 20em;
  display: block;
}
.listCon .ul .li .text{
  text-align: left;
  padding:0;
  position: absolute;
  bottom:0;
  background-color: rgba(0, 0, 0, 0.596);
  color: #fff;
  box-sizing: border-box;
  width: 100%;
}
