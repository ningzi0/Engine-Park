/* pages/rental/rental.wxss */
.retal-title{
  display: flex;
  padding: 1em;
}
.retal-title .retal-t-item{
  flex: 1;
}
.retal-price{
  text-align: right;
}
.retal-name .h3{
  font-size: 1.2em;
}
.retal-name .p{
  font-size: 0.7em;
  color: #ccc;
  padding: 0.5em 0 0;
}
.retalPriceText{
  font-size: 0.9em;
  color: #fff;
  font-weight: bold;
}
.retalPriceText text{
  background-color: #c21236;
  padding: 0.5em 1em;
}
.rentalImg{
  text-align: right;
  background: linear-gradient(#fff,#fff,#f2f2f2);
}
.rentalImg image{
  width: 70%;
  height: 12em;
  margin-top: -3em;
  transform: rotateY(180deg);
}
.quchedian image{
  width: 2em;
  height: 2em;
  display: inline-block;
  vertical-align: middle;
  margin-top: 0;
  transform: rotate(0);
}
.retal-bottom {
  /* display: flex; */
  text-align: left;
  margin-top: -3em;
}
/* .retal-b-item{
  flex: 1;
} */
.quchedian text{
  font-size: 0.7em;
  color: #ccc;
  display: inline-block;
  vertical-align: middle;
}
.retal-btn{
  /* text-align: right; */
  padding: 0 1.75em 1em;
  display: inline-block;
}

















