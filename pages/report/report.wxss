.report{
  padding: 0.5em;
}
.reportitle{
  border-bottom: 1px solid #eee;
  padding: 0.75em 0;
}
.reportitle .h3{
  font-size: 2em;
  font-weight: bold;
}
.reportitle text{
  font-size:0.88em ;
  color: #c9c9c9;
}
.reportab{
  width: 100%;
  overflow-x: scroll;
}
.tab-h{
  padding: 0.5em 0;
  width: 40.7em;
}
.tab-item{
  text-align: center;
  margin-right:10rpx;
  display: inline-block;
  color: #7d7d7d;
  transition: 0.4s;
  min-height: 1.75em;
  font-size: 0.95em;
}
.tab-item .pic{
  width: 5em;
  height: 5em;
  background-color: #f5f5f5;
  box-sizing: border-box;
  position: relative;
}
.tab-item text{
  font-size: 0.85em;
}
.tab-item .pic image{
  width: 2.5em;
  height: 2.5em;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%,-50%);
}
.tab-item.active {
  color: #000;
  position: relative;
}
.tab-item.active:after {
  content: "";
  display: block;
  height: 10px;
  width: 10px;
  background:linear-gradient(to right,#f9dd4d,#f4c46f);
  position: absolute;
  bottom: 1.2em;
  left: 50%;
  border-radius: 16rpx;
  transform: translate(-50%,0);
}
.reportCon{
  padding: 0.5em;
}
.reportTitle{
  font-size: 1.2em;
  font-weight: bold;
}
.reportCon{
  padding:1em 0.5em
}
.reportItem .ul .li{
  border-bottom: 1px solid #eee;
  padding: 0.75em 0;
}
.reportItem .ul .li image{
  width:1.2em;
  height: 1.2em;
}
.reportItem .ul .li .reportext{
  width: 80%;
  font-size: 0.85em;
}



















