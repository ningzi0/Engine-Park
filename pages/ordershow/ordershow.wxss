/* pages/ordershow/ordershow.wxss */
page{
  background-color: #f5f5f5;
}
.ordershowTitle{
  font-size: 1.5em;
  font-weight: bold;
  margin: 1em;
  color: #282826;
}
.orderCon{
  margin: 0.35em 0.5em 0;
  background-color: #fff;
  padding: 1em;
  box-sizing: border-box;
}
.orderimg{
  width: 7em;
  height: 7em;
  text-align: center;
  display: inline-block;
  vertical-align: middle;
}
.orderimg image{
  width: 7em;
  height: 7em;
}
.orderText{
  display: inline-block;
  vertical-align: middle;
  padding: 0 1em;
  width: 63%;
  box-sizing: border-box;
}
.orderT-Name{
  margin-bottom: 0.5em;
}
.orderT-Num,.orderT-Date,.orderT-price{
  font-size: 0.75em;
  color: #5c5c5c;
  line-height: 1.7;
}
.orderT-btn{
  text-align: right;
  padding:0.5em 0;
}
.orderT-btn view{
  display: inline-block;
  border: 1px solid #d2d2d2;
  font-size: 14px;
  padding: 0.5em 1em;
  margin-left: 0.5em;
  border-radius: 5px;
}
.orderShowTit{
  font-size: 1.1em;
  font-weight: bold;
  padding-bottom: 1em;
  border-bottom: 1px solid #eee;
}
.orderShowLi{
  padding: 0.5em 0;
}
.orderShowLi .span{
  font-size: 0.9em;
  display: inline-block;
  width: 20%;
  vertical-align: middle;
  color: #9f9fa1;
}
.orderShowLi .font{
  font-size:0.9em ;
  display: inline-block;
  width: 79%;
  text-align: right;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
  vertical-align: middle;
}





































