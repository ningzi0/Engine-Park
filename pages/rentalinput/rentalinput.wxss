page{
  background-color: #e2e1e5;
}
.lookcarTitle{
  font-size: 0.95em;
  text-align: center;
  margin-bottom: 2em;
}

.lookcarContent{
  position: fixed;
  top: 50%;
  left: 0;
  width: 100%;
  padding: 0 3em;
  box-sizing: border-box;
  transform: translate(0,-50%);
}



.lookcarUl{
  border-bottom: 1px solid #c5c5c6;
}
.lookcarUl .li{
  padding:1.5em 1em;
  border-top: 1px solid #c5c5c6;
  font-size: 0.9em;
}
.lookcarUl .li input,.lookcarUl .li picker,.lookcarUl .li .text2{
  display: inline-block;
  vertical-align: middle;
  width: 59%;
  padding: 0 1em;
}
.lookcarUl .li text{
  display: inline-block;
  vertical-align: middle;
  width: 25%;
  border-right: 1px solid #c5c5c6;
  position: relative;
}
.lookcarUl .li text::before{
  position: absolute;
  content: "";
  display: block;
  width: 0.3em;
  height: 0.3em;
  border: 1px solid #c5c5c6;
  border-radius: 50%;
  top: 50%;
  transform: translate(0,-50%);
  left: -1em;
}

.submit{
  text-align: center;
  font-size: 0.95em;
  margin-top: 2em;
  background-color: #dddce0;
}
.submit navigator{
  padding: 1em 0;
}

.submit:active{
  background-color: #d8d7db;
}