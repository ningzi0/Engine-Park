/* pages/add_jsr/add_jsr.wxss */
page{
  background-color: #f2f3f5;
}
.add_jsrul{
  background-color: #fff;
  margin: 0.5em;
  padding: 1em;
  font-size: 0.9em;
}
.add_jsrul .add_jsrli{
  padding: 0.95em 0;
  border-bottom: 1px solid #eee;
}
.add_jsrul .add_jsrli:last-child{
  border-bottom: 0;
}
.add_jsrul .add_jsrli text{
  display: inline-block;
  width: 30%;
  vertical-align: middle;
}
.add_jsrul .add_jsrli input{
  display: inline-block;
  width: 69%;
  vertical-align: middle;
}
.jsr_btn{
  background-color: #fec901;
  text-align: center;
  padding: 0.75em 0;
  margin: 0.5em;
}
.read checkbox-group{
  display: inline-block;
}
.content{
  font-size:0.85em ;
  margin:1em;
  color: #aeaeae;
  line-height: 1.75;
}
checkbox .wx-checkbox-input {
	width: 34rpx;
	height: 34rpx;
	border-radius: 50%;
}
/*checkbox选中后样式  */
checkbox .wx-checkbox-input.wx-checkbox-input-checked {
  background: #fec901;
  border-color:#fec901;
}
/*checkbox选中后图标样式  */
checkbox .wx-checkbox-input.wx-checkbox-input-checked::before {
  width: 20rpx;
  height: 20rpx;  
  line-height: 20rpx;
  text-align: center;
  font-size: 22rpx;
  color: #fff;
  background: transparent;
  transform: translate(-50%, -50%) scale(1);
  -webkit-transform: translate(-50%, -50%) scale(1);
}




