/* pages/bar/bar.wxss */
.barTop{
  height: 10em;
  background-color: #efac37;
  position: relative;
  box-sizing: border-box;
}

.barTitle{
  text-align: center;
  color: #333;
  position: fixed;
  top: 5.5vh;
  left: 50%;
  transform: translate(-50%,0);
  font-size:0.9em ;
}

.barTopCon{
  background-color: #fff;
  position: absolute;
  bottom: -3em;
  width: 93%;
  box-shadow: 0 0.1em 0.5em rgba(0,0,0,0.15);
  box-sizing: border-box;
  left: 50%;
  transform: translate(-50%,0);
  border-radius: 0.35em;
  padding: 0.75em 0;
  display: flex;
}
.barTopItem{
  text-align: center;
  flex: 1;
  opacity: 0.3;
  transform: scale(0.9);
  transition: 0.2s;
}
.barTopItem.active{
  opacity: 1;
  transform: scale(1);
}
.barTopItem image{
  width: 4em;
  height: 4em;
}
.barTopItem text{
  display: block;
  font-size: 0.85em;
}

.barSearch{
  width: 93%;
  margin: 3.75em auto 0;
  position: relative;
}
.barSearch input{
  font-size: 0.75em;
  background-color: #f7f7f7;
  padding: 0.75em 1em;
  border-radius: 10em;
}

.searico{
  position: absolute;
  top: 50%;
  right: 1em;
  transform: translate(0,-50%);
}
.searico image{
  width: 1.5em;
  height: 1.5em;
}

.barContent{
  width: 93%;
  margin: 0 auto;
  background-color: #fff;
  position: relative;
  z-index: 55;
}
.barConTitle{
  padding: 0.75em;
}
.barConTitle .h3{
  font-weight: bold;
}
.barConTitle text{
  font-size: 0.75em;
  color: #dedede;
}

.barConLi{
  margin: 0 0 1em 1em;
  position: relative;
  transition: 0.3s;
}
.barConLi .buybtn{
  position: absolute;
  top: 50%;
  transform: translate(0,-50%);
  width: 2em;
  height: 2em;
  background-color: #e77400c5;
  color: rgba(255, 255, 255, 0.527);
  font-size: 1.3em;
  border-radius: 50%;
  left: -1em;
  text-align: center;
  line-height: 1.9em;
  transition: 0.3s;
}
.barConLi navigator{
  display: flex;
  border: 1px solid #f7f7f7;
  padding: 1em 0;
  border-radius: 0.35em;
  transition: 0.3s;
}
.barConLi image{
  width: 7em;
  height: 7em;
  flex: 1;
}
.barConLi .barConText{
  flex: 2;
  padding: 0 0.5em;
}
.barConLi .barConText .num{
  font-size: 1.3em;
  font-weight: bold;
  color: #dedede;
}
.barConLi .barConText .barConTit{
  font-size:1.2em ;
  font-weight: bold;
  letter-spacing: -0.1em;
  margin: 0.2em 0;
} 
.barConLi .barConText .p{
  font-size: 0.75em;
  color: #dedede;
  max-height: 2.6em;
  overflow: hidden;
  margin-bottom: 0.75em;
}
.barConLi .barConText .price{
  font-size: 1.1em;
  font-weight: bold;
  color: #efac37;
}
.barConUl .cur{
  margin: 0 1em 1em 0;
}
.barConUl .cur navigator{
  background-color: #f7e7ce;
  padding-right:1em ;
}
.barConUl .cur .buybtn{
  left: 88%;
  transform: rotate(45deg) translate(0,-50%);
}
.addcart{
  display: none;
}
.barConUl .cur .addcart{
  display: block;
  height:2.9em;
  font-weight: bold;
  color: #dc7775;
  line-height: 1.95;
  font-size: 0.85em;
}
.barConUl .cur .p{
  display: none;
}










