/* pages/camerashow/camerashow.wxss */
page{
  height: 100%;
}
.camerashow{
  height: 100%;
}
.camerashow swiper{
  width: 100%;
  height: 100%;
}
.camerashow swiper .pic{
  height: 100%;
}
.camerashow swiper .pic image{
  width: 100%;
  height: 100%;
}





.text{
  position: fixed;
  top: 70%;
  left: 50%;
  transform: translate(-50%,-50%);
}


.box-transition {
  transition: all 2s;
}
.box-moved {
  margin-top: -100px;
}

